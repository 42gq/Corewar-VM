#include "../includes/asm.h"

int	size_line(char *stock, int count)
{
	int size;

	size = count;
	while(stock[size] != '\n')
		size++;
	return (size);
}

int	name_check(char *stock, t_env *e)
{
	int end_line;
	int	i;
	int	cpt_quote;

	i = -1;
	end_line = size_line(stock, e->count);
	while (++i < end_line)
	{
		if (stock[i] == '.')
		{
			cpt_quote = 0;
			if (ft_strncmp(stock + i, NAME_CMD_STRING, 5) == 0)
			{
				i += 5;
				while (i < end_line && cpt_quote < 2)
					if (stock[i++] == '"')
						cpt_quote++;
				if (cpt_quote == 2)
				{
					while (i < end_line)
						if (stock[i] > 32 && stock[i++] < 127)
							return (0);
				}
				else
					return (0);
			}
		}
	}
	e->count += end_line;
	return (1);
}

int	comment_check(char *stock, t_env *e)
{
	int end_line;
	int	i;
	int	cpt_quote;

	i = -1;
	end_line = size_line(stock, e->count);
	while (++i < end_line)
	{
		if (stock[i] == '.')
		{
			cpt_quote = 0;
			if (ft_strncmp(stock + i, NAME_CMD_STRING, 8) == 0)
			{
				i += 5;
				while (i < end_line && cpt_quote < 2)
					if (stock[i++] == '"')
						cpt_quote++;
				if (cpt_quote == 2)
				{
					while (i < end_line)
						if (stock[i] > 32 && stock[i++] < 127)
							return (0);
				}
				else
					return (0);
			}
		}
	}
	e->count += end_line;
	return (1);
}

int	name_and_comment(char *stock, t_env *e)
{
	int n_c;
	int	tmp;

	tmp = 0;
	n_c = 0;
	if ((tmp += name_check(stock, e)) || (tmp += comment_check(stock, e)))
		n_c += tmp;
	if ((tmp += name_check(stock, e)) || (tmp += comment_check(stock, e)))
		n_c += tmp;
	if (n_c == 3)
		return (1);
	return (0);
}

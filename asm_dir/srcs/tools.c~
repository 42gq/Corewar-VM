#include "../includes/asm.h"

int size_line(char *stock, int count)
{
	int size;

	size = count;
	while(stock[size] != '\n')
		size++;
	return (size);
}

int skip_space(char *str)
{
	int i;

	i = 0;
	while (str[i] < 33 || str[i] > 126)
		i++;
	return (i);
}

int skip_empty_and_com(char *str)
{
	int i;

	i = 0;
	i += skip_space(str);
	if (str[i] == '#')
		i += size_line(str, i);
	return (i);
}
